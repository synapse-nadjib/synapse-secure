    <script>
        let sessionActive = false;
        
        function startSession() {
            if (sessionActive) return;
            
            sessionActive = true;
            const chat = document.getElementById('chatContainer');
            
            const messages = [
                "üîê Session s√©curis√©e d√©marr√©e",
                "‚úÖ Conforme aux normes RGPD", 
                "üåê Connexion chiffr√©e √©tablie",
                "üöÄ Pr√™t √† communiquer en s√©curit√©"
            ];
            
            messages.forEach((msg, index) => {
                setTimeout(() => {
                    addSystemMessage(msg);
                }, index * 800);
            });
        }
        
        function addSystemMessage(text) {
            const chat = document.getElementById('chatContainer');
            const message = document.createElement('div');
            message.className = 'message received';
            message.innerHTML = `<strong>Syst√®me:</strong> ${text}`;
            chat.appendChild(message);
            chat.scrollTop = chat.scrollHeight;
        }
        
        function sendMessage() {
            const input = document.getElementById('messageInput');
            const message = input.value.trim();
            
            if (message && sessionActive) {
                const chat = document.getElementById('chatContainer');
                
                // Message de l'utilisateur
                const userMsg = document.createElement('div');
                userMsg.className = 'message sent';
                userMsg.innerHTML = `<strong>Vous:</strong> ${message}`;
                chat.appendChild(userMsg);
                
                input.value = '';
                
                // R√©ponse automatique
                setTimeout(() => {
                    const responses = [
                        "Message s√©curis√© re√ßu ‚úì",
                        "Communication √©tablie üîí",
                        "Syst√®me op√©rationnel üåê",
                        "Protocole de s√©curit√© actif üõ°Ô∏è"
                    ];
                    const randomResponse = responses[Math.floor(Math.random() * responses.length)];
                    addSystemMessage(randomResponse);
                }, 1000);
            } else if (!sessionActive) {
                alert("Veuillez d'abord d√©marrer la session s√©curis√©e !");
            }
        }
        
        function shareSynapse() {
            const shareUrl = window.location.href;
            const shareText = `D√©couvrez Synapse - Communication 100% s√©curis√©e et gratuite!

üîí Caract√©ristiques :
‚Ä¢ Chiffrement de bout en bout
‚Ä¢ 100% gratuit
‚Ä¢ Conforme RGPD
‚Ä¢ Interface moderne

Lien : ${shareUrl}

#communication #s√©curit√© #gratuit`;

            if (navigator.share) {
                navigator.share({
                    title: 'Synapse - Communication S√©curis√©e',
                    text: shareText,
                    url: shareUrl
                });
            } else {
                // Fallback pour le partage
                prompt('Copiez ce texte pour partager Synapse :', shareText);
            }
        }
        
        // D√©marrer automatiquement apr√®s 2 secondes
        setTimeout(startSession, 2000);
        
        // Gestion de la touche Entr√©e
        document.getElementById('messageInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                sendMessage();
            }
        });
        
        console.log('üîí Synapse - Syst√®me initialis√©');
        console.log('üåê Pr√™t pour le d√©ploiement GitHub Pages');
